<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10sp"
    android:layout_marginBottom="15sp"
    android:background="@drawable/rounded_corner"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12sp"
        app:strokeWidth="0sp">

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="130sp"
            android:layout_height="160sp"
            android:scaleType="centerCrop"
            android:src="@drawable/verti_img_1" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="8sp"
        android:paddingTop="8sp"
        android:paddingBottom="8sp">

        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_medium"
            android:gravity="start"
            android:maxLines="1"
            android:text="Salem RR Briyani"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:maxLines="1"
            android:text="Briyani, Pizza"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="⭐"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/swiggy_font_medium"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:text="3.8"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="•"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/swiggy_font_medium"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:text="20 mins"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hotel_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:maxLines="1"
            android:text="Medavakkam, 3.0 km"
            android:textSize="16sp" />

        <!-- Divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- Transportation icons and times -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Walking icon and time -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:contentDescription="Walking"
                android:src="@drawable/walking_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:text="9 min"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Cycle icon and time -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:contentDescription="Cycling"
                android:src="@drawable/cycling_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:text="7 min"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Car icon and time -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:contentDescription="Car"
                android:src="@drawable/car_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:text="4 min"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Train icon and time -->
            <ImageView
                android:layout_width="20sp"
                android:layout_height="wrap_content"
                android:contentDescription="Train"
                android:src="@drawable/bus_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="1 min"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:background="@color/profileBackground"
        android:gravity="center">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/profile_bk" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_back_button"
            android:textAlignment="center"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/back_to_home_button"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:minWidth="250dp" />

    </RelativeLayout>

</LinearLayout>
