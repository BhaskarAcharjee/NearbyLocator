<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15sp"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12sp"
        app:strokeWidth="0sp">

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:src="@drawable/verti_img_1" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8sp"
        android:paddingBottom="8sp">

        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_medium"
            android:gravity="start"
            android:maxLines="1"
            android:text="Salem RR Briyani"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="⭐"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/swiggy_font_medium"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:text="3.8"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="•"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/swiggy_font_medium"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:text="20 mins"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:maxLines="1"
            android:text="Briyani, Pizza"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_hotel_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:maxLines="1"
            android:text="Medavakkam, 3.0 km"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_offer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_extra10" />

    </LinearLayout>

</LinearLayout>