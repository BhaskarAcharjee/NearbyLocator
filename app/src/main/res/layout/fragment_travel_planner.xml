<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.TravelPlannerFragment">

    <!-- Header -->
    <com.example.nearbylocator.view.HeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Search Bar for searching destinations -->
    <com.example.nearbylocator.view.SearchBarView
        android:id="@+id/search_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent" />

    <!-- Timeline View -->
    <!-- Timeline View -->
    <LinearLayout
        android:id="@+id/timeline_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">
        <!-- Timeline Items -->
        <TextView
            android:id="@+id/timeline_step_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Step 1: Where to?"
            android:textColor="@color/colorPrimary"
            android:tag="timeline_step_1" /> <!-- Added tag -->

        <TextView
            android:id="@+id/timeline_step_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Step 2: How many days?"
            android:textColor="@color/grey"
            android:tag="timeline_step_2" /> <!-- Added tag -->

        <TextView
            android:id="@+id/timeline_step_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Step 3: Budget"
            android:textColor="@color/grey"
            android:tag="timeline_step_3" /> <!-- Added tag -->

        <TextView
            android:id="@+id/timeline_step_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Step 4: Features"
            android:textColor="@color/grey"
            android:tag="timeline_step_4" /> <!-- Added tag -->

        <TextView
            android:id="@+id/timeline_step_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Results"
            android:textColor="@color/grey"
            android:tag="timeline_step_5" /> <!-- Added tag -->
    </LinearLayout>


    <!-- Question Container -->
    <LinearLayout
        android:id="@+id/question_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="@drawable/background_rounded"
        android:padding="16dp">
        <!-- Dynamic views will be added here -->
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_gravity="end">

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Next" />
    </LinearLayout>

    <!-- AI Suggestion Placeholder -->
    <TextView
        android:id="@+id/ai_suggestion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="AI Suggestions will be displayed here."
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
