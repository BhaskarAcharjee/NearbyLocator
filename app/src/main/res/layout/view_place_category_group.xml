<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="5sp"
    android:paddingEnd="5sp">

    <!-- Category Header with title and See All option -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/swiggy_font_extrabold"
            android:textColor="@color/black"
            android:text="Category Title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/swiggy_font_medium"
            android:gravity="end"
            android:text="SEE ALL"
            android:textColor="@color/orange"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Category Description -->
    <TextView
        android:id="@+id/tv_category_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/swiggy_font_regular"
        android:paddingStart="2sp"
        android:textSize="14sp" />

    <!-- RecyclerView for Category items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:paddingBottom="15sp" />

</LinearLayout>
