<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10sp"
    android:paddingEnd="10sp"
    android:paddingBottom="25sp">

    <ImageView
        android:id="@+id/iv_hotel_image"
        android:layout_width="match_parent"
        android:layout_height="320sp"
        android:src="@drawable/dineout_hori_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5sp"
        android:paddingEnd="5sp">

        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_medium"
            android:gravity="start"
            android:maxLines="1"
            android:paddingTop="5sp"
            android:text="Salem RR Briyani"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_hotel_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:text="4.6"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5sp"
        android:paddingEnd="5sp">

        <TextView
            android:id="@+id/tv_hotel_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:gravity="start"
            android:maxLines="1"
            android:paddingTop="5sp"
            android:text="Medavakkam"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_hotel_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:gravity="start"
            android:maxLines="1"
            android:paddingTop="5sp"
            android:text="2.8 km"
            android:textColor="@color/black"
            android:textSize="14sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5sp"
        android:paddingTop="2sp"
        android:paddingEnd="5sp">

        <TextView
            android:id="@+id/tv_hotel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:gravity="start"
            android:maxLines="1"
            android:text="Chinese, North Indian"
            android:textColor="@color/grey"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:fontFamily="@font/swiggy_font_light"
            android:gravity="start"
            android:maxLines="1"
            android:text="1000 for two"
            android:textColor="@color/grey"
            android:textSize="14sp"/>


    </RelativeLayout>

</LinearLayout>