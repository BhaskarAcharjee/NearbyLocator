<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CategoryGroupFragment">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#fedbdc"
        android:padding="15dp"
        android:translationZ="100sp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_category_heading_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Heading"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_instamart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    Added FrameLayout that acts as a container for the included layout. The background color is applied to the FrameLayout, effectively changing the background of the included layout. -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fedbdc">

                <!--    Header  -->
                <com.example.nearbylocator.view.HeaderView
                    android:id="@+id/header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fedbdc">

                <!--    Searchbar   -->
                <com.example.nearbylocator.view.SearchBarView
                    android:id="@+id/searchBarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fedbdc"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_category_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Heading"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:paddingTop="10sp"
                android:src="@drawable/img_offerzone" />

            <!-- Offers Section -->
            <com.example.nearbylocator.view.OffersView
                android:id="@+id/offers_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="18sp"
                android:layout_gravity="center"
                android:src="@drawable/img_graboffer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swiggy_font_extrabold"
                    android:paddingStart="10sp"
                    android:text="Food &amp; Drinks Categories"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="650sp"
                    android:src="@drawable/instamart_all" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swiggy_font_extrabold"
                    android:paddingStart="10sp"
                    android:text="Hot Deals!"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/swiggy_font_light"
                    android:maxLines="1"
                    android:paddingStart="10sp"
                    android:text="Grab upto 30% off, exclusively for you"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_hotdeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp" />

            </LinearLayout>

            <!--            Advertisement -->
            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical"-->
            <!--                android:paddingTop="20sp">-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:fontFamily="@font/swiggy_font_extrabold"-->
            <!--                    android:paddingStart="10sp"-->
            <!--                    android:text="Brand with a buzz!"-->
            <!--                    android:textColor="@color/black"-->
            <!--                    android:textSize="18sp" />-->


            <!--                <ImageView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="350sp"-->
            <!--                    android:layout_marginTop="15sp"-->
            <!--                    android:src="@drawable/img_brand" />-->


            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:background="#f1f1f4"
                android:orientation="vertical"
                android:paddingTop="20sp"
                android:paddingBottom="20sp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"
                    android:paddingBottom="10sp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/swiggy_font_extrabold"
                        android:gravity="center"
                        android:letterSpacing="0.2"
                        android:text="Best Offers For You"
                        android:textColor="@color/dark_grey"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/grey" />

                </LinearLayout>

                <!-- Offers Section -->
                <com.example.nearbylocator.view.OffersView
                    android:id="@+id/offers_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20sp"
                android:paddingBottom="20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/swiggy_font_extrabold"
                    android:paddingStart="10sp"
                    android:text="Top picks for you"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/swiggy_font_light"
                    android:maxLines="1"
                    android:paddingStart="10sp"
                    android:text="Based on what's popular around you"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_top_picks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f1f1f4"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30sp">

                <TextView
                    android:id="@+id/tv_place_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/swiggy_font_light"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/end_note"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>