<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:elevation="100sp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/app_navigation">

    </androidx.fragment.app.FragmentContainerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:background="@color/white"
        android:elevation="8dp"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/app_navbar">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <View
        android:layout_width="0dp"
        android:layout_height="3sp"
        android:background="@drawable/top_shadow_gradient"
        android:translationZ="100sp"
        app:layout_constraintBottom_toTopOf="@id/ll_navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:translationZ="100sp"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view_home"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/swiggy_orange"
                android:visibility="gone" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="3sp"
                android:src="@drawable/icon_home" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="Places"
                android:textColor="@color/grey"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view_food"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/swiggy_orange"
                android:visibility="gone" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="3sp"
                android:src="@drawable/icon_service" />

            <TextView
                android:id="@+id/tv_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="Services"
                android:textColor="@color/grey"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view_instamart"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/swiggy_orange"
                android:visibility="gone" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="3sp"
                android:src="@drawable/icon_mapview" />

            <TextView
                android:id="@+id/tv_instamart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="Mapview"
                android:textColor="@color/grey"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view_dineout"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/swiggy_orange"
                android:visibility="gone" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:layout_marginTop="3sp"
                android:src="@drawable/icon_event" />

            <TextView
                android:id="@+id/tv_dineout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="Events"
                android:textColor="@color/grey"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view_genie"
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@color/swiggy_orange"
                android:visibility="gone" />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="3sp"
                android:src="@drawable/icon_profile" />

            <TextView
                android:id="@+id/tv_genie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/swiggy_font_medium"
                android:text="Profile"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>