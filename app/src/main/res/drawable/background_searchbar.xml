<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid background color for the search bar -->
    <solid android:color="@color/light_grey" />

    <!-- Corner radius to give rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding for internal spacing -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <!-- Border or stroke for the outline of the search bar -->
    <stroke
        android:width="1dp"
        android:color="@color/dark_grey" /> <!-- Light gray border -->

</shape>
