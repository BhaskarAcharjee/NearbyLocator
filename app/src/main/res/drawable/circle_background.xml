<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Solid fill color for the circle -->
    <solid android:color="@color/light_grey" />

    <!-- Optional stroke (border) for the circle -->
    <stroke
        android:width="2dp"
        android:color="@color/grey" />

    <!-- Optional padding inside the circle -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional size if you want to define a specific width and height -->
    <size
        android:width="40dp"
        android:height="40dp" />
</shape>
